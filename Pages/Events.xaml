<Page x:Class="MVA_poe.Pages.Events"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MVA_poe.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Events">

    <Grid>
        <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title for the Page -->
                <TextBlock Text="{DynamicResource LocalEventsAndAnnouncements}"
                           Grid.Row="0" 
                           FontSize="35" 
                           Foreground="{DynamicResource PrimaryTextColor}" 
                           FontWeight="Bold"
                           VerticalAlignment="Top" 
                           HorizontalAlignment="Center" 
                           Margin="0,30,0,0"/>

                <!-- Main Content Area -->
                <StackPanel Orientation="Vertical"  Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"  Height="460"
                         >

                    <Border>
                        <Grid>
                            <Image Source="/Resources/eventBC.png"  Panel.ZIndex="0" HorizontalAlignment="Left" Width="476" Margin="26,83,0,-124"/>

                            <TextBlock Text="{DynamicResource EA_MSG}" TextWrapping="Wrap"  FontSize="20"
                                           FontWeight="Light" Width="508" HorizontalAlignment="Left" Foreground="{DynamicResource PrimaryTextColor}" Margin="-4,26,0,117" Height="84"/>

                            <Border Background="#99D3D3D3" CornerRadius="15" Margin="-53,283,-46,-164">
                                <TextBlock Text="{DynamicResource EA_MSG1}" TextWrapping="Wrap" FontSize="18"
                                               FontWeight="SemiBold" Width="500" HorizontalAlignment="Center" Foreground="{DynamicResource SecundaryBackgroundColor}" Margin="0,10,0,-6"/>
                            </Border>
                        </Grid>
                    </Border>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
