<Page x:Class="MVA_poe.Pages.Events"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MVA_poe.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Events">

    <Grid>
        <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title for the Page -->
                <TextBlock Text="{DynamicResource LocalEventsAndAnnouncements}"
                           Grid.Row="0" 
                           FontSize="35" 
                           Foreground="{DynamicResource PrimaryTextColor}" 
                           FontWeight="Bold"
                           VerticalAlignment="Top" 
                           HorizontalAlignment="Center" 
                           Margin="0,30,0,0"/>



                <!-- Main Content Area -->
                <StackPanel Orientation="Vertical"  Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"  Height="381" Width="544"
                         >
                    <StackPanel Orientation="Horizontal" Margin="21,0,9,23" Grid.ColumnSpan="2" Grid.Row="0" Height="60">
                        <TextBlock Text="{DynamicResource LocalEvents}"  FontSize="15" FontWeight="Bold" Foreground="{DynamicResource PrimaryIconColor}" Margin="15 0 0 0" VerticalAlignment="Center"/>
                        <ComboBox x:Name="EventList" Width="277"   Margin="50 0 50 0" VerticalAlignment="Center"   Height="36"></ComboBox>
                    </StackPanel>


                    <Border>
                        <Grid>
                            <Image Source="/Resources/eventBC.png"  Panel.ZIndex="0" HorizontalAlignment="Left" Width="444" Margin="36,0,0,-29"/>
                        </Grid>
                    </Border>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
