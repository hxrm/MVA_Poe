<Page x:Class="MVA_poe.Pages.Rec"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MVA_poe.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Rec">

    <Grid>
        <ListView x:Name="RecommendedEventsListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Event Name"
                                    DisplayMemberBinding="{Binding EventName}"
                                    Width="200" />
                    <GridViewColumn Header="Category"
                                    DisplayMemberBinding="{Binding EventCat}"
                                    Width="100" />
                    <GridViewColumn Header="Date"
                                    DisplayMemberBinding="{Binding EventDate}"
                                    Width="150" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
