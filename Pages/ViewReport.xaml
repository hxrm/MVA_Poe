<Page x:Class="MVA_poe.Pages.ViewReport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MVA_poe.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateReport" Foreground="{DynamicResource SecundaryBackgroundColor}">

    <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}">

        <Grid VerticalAlignment="Center" Margin="0" Width="750" MinHeight="390">
            <Grid.RowDefinitions>
                <RowDefinition Height="61*"/>
                <RowDefinition Height="389*"/>
            </Grid.RowDefinitions>

            <!--Main Layer -->
            <Border CornerRadius="7" Background="White" Margin="3,3,3,3" Grid.RowSpan="2" Width="750">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="5" Direction="-130" Opacity="0.1"/>
                </Border.Effect>
            </Border>

            <!--Grid to hold the ListView-->
            <Grid Grid.Row="1" Grid.Column="3" Grid.RowSpan="6" Margin="30 40 30 50">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <ListView x:Name="UploadingFilesList" Margin="10" MinWidth="600">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10" MinWidth="600">
                                        <StackPanel>
                                            <TextBlock Text="Report ID:" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding reportID}" Margin="0,0,0,10"/>

                                            <TextBlock Text="User ID:" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding userID}" Margin="0,0,0,10"/>

                                            <TextBlock Text="Title:" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding reportName}" Margin="0,0,0,10"/>

                                            <TextBlock Text="Description:" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding reportDesc}" Margin="0,0,0,10"/>

                                            <TextBlock Text="Location:" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding reportLoc}" Margin="0,0,0,10"/>

                                            <TextBlock Text="Date Created:" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding reportDate}" Margin="0,0,0,10"/>

                                           
                                            <!-- Nested ListView for Attachments -->
                                            <!--<ListView ItemsSource="{Binding Attachments}" Margin="10" MinWidth="600">
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10" MinWidth="600">
                                                            <StackPanel>
                                                                <TextBlock Text="Attachment ID:" FontWeight="Bold"/>
                                                                <TextBlock Text="{Binding attachmentID}" Margin="0,0,0,10"/>

                                                                <TextBlock Text="File Name:" FontWeight="Bold"/>
                                                                <TextBlock Text="{Binding FileName}" Margin="0,0,0,10"/>

                                                                <TextBlock Text="File Size:" FontWeight="Bold"/>
                                                                <TextBlock Text="{Binding FileSize}" Margin="0,0,0,10"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>-->
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <ItemsControl x:Name="pList" Margin="30,0,50,30" Height="100" Width="640">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding FileName}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding FileSize}" Margin="0,0,0,10"/>
                                        <ProgressBar Value="{Binding UploadProgress}" Height="20"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <ItemsControl x:Name="ImageList" Margin="30,0,50,30" Height="100" Width="640">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding FileName}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding FileSize}" Margin="0,0,0,10"/>
                                        <ProgressBar Value="{Binding UploadProgress}" Height="20"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <Grid Margin="4,0,4,0" Width="750" Grid.RowSpan="2" Grid.ColumnSpan="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Title-->
                <StackPanel Orientation="Horizontal" Margin="20 30 10 -6">
                    <TextBlock Text="{DynamicResource Report}"  FontSize="30" FontWeight="Bold" Foreground="{DynamicResource TextSecundaryColor}" Margin="15 0 0 0" VerticalAlignment="Top"/>
                </StackPanel>
                <Separator Grid.Row="1" Grid.ColumnSpan="2" Height="0.7" Margin="-20 20" Background="Silver"/>

                <!--Buttons-->
                <Border Grid.Column="1" Grid.Row="6" CornerRadius="0 0 10 10">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="btnSubmit" Content="{DynamicResource Submit}" Width="150" Margin="15,15,15,15">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="5" Direction="-130" Opacity="0.1"/>
                            </Button.Effect>
                        </Button>
                        <Button Content="{DynamicResource Cancel}" Width="150" Margin="15,15,15,15">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="5" Direction="-130" Opacity="0.1"/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Page>
