<Page x:Class="MVA_poe.Pages.ViewReport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MVA_poe.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateReport" Foreground="{DynamicResource SecundaryBackgroundColor}">

    <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}">

        <Grid VerticalAlignment="Center" Margin="0" Width="750" MinHeight="390">
            <Grid.RowDefinitions>
                <RowDefinition Height="61*"/>
                <RowDefinition Height="389*"/>
            </Grid.RowDefinitions>

            <!--Main Layer -->
            <Border CornerRadius="7" Background="White" Margin="3,3,3,3" Grid.RowSpan="2" Width="750">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="5" Direction="-130" Opacity="0.1"/>
                </Border.Effect>
            </Border>
            <!--Title-->
            <StackPanel Orientation="Horizontal" Margin="20 30 10 -4">
                <TextBlock Text="{DynamicResource Report}"  FontSize="30" FontWeight="Bold" Foreground="{DynamicResource TextSecundaryColor}" Margin="15 0 0 0" VerticalAlignment="Top"/>
                <ComboBox x:Name="ReportList" Width="350" Margin="50 2 50 0"  SelectionChanged="ReportList_SelectionChanged"></ComboBox>
            </StackPanel>
            <Separator Grid.Row="1" Height="0.7" Margin="8,12,-2,377" Background="Silver"/>

            <!--Grid to hold the ListView-->
            <Grid Grid.Row="1" Grid.Column="3" Grid.RowSpan="6" Margin="30 40 30 50">


                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Vertical">
                        <!--Report Info-->
                        <ListView x:Name="UploadingFilesList" Margin="10" HorizontalAlignment="Center" MinWidth="600">
                           
                        </ListView>                     
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <Grid Margin="4,0,4,0" Width="750" Grid.RowSpan="2" Grid.ColumnSpan="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <!--Buttons-->
                <Border Grid.Column="1" Grid.Row="6" CornerRadius="0 0 10 10">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="btnSubmit" Content="{DynamicResource Submit}" Width="150" Margin="15,15,15,15">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="5" Direction="-130" Opacity="0.1"/>
                            </Button.Effect>
                        </Button>
                        <Button Content="{DynamicResource Cancel}" Width="150" Margin="15,15,15,15">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="5" Direction="-130" Opacity="0.1"/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Page>
